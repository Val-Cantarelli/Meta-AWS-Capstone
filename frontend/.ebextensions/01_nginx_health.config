files:
  "/etc/nginx/conf.d/elasticbeanstalk/99_health.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Health check endpoint for ALB/EB (handles /health and /health/)
      location = /health {
        return 200 "OK";
        add_header Content-Type text/plain;
      }
      
      location = /health/ {
        return 200 "OK";
        add_header Content-Type text/plain;
      }
